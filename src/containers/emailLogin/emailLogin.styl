.emailLogin
  height: 1334px
  background-color: #fff
  .loginWrap
    height: auto
    padding: 0 .4rem
    .view
      .logo
        text-align center
        margin-top .74667rem
        margin-bottom: 0
        img
          width: 2.56rem
          height .85333rem
      .userBox
        padding-top 80px
        height: auto
        .login_message, .login_verification
          position: relative
          margin-bottom 20px
          border-bottom 1px solid lightgray
          border-radius 2px
          display: block
          width: 100%
          height: 80px
          line-height: 80px
          overflow: hidden
          font-size 28px
          color #fff
          vertical-align middle
          text-align left
          margin-top 20px
          input
            width: 100%
            height: 40px
            line-height: 40px
            font-size 28px
            margin: 12px 0
            //background-color #F5F5F9
            -webkit-tap-highlight-color: transparent
            letter-spacing: normal
            outline none
          &:-webkit-autofill
            -webkit-box-shadow:0 0 0 100px #eee inset
            -webkit-text-fill-color: #000000;
          &:-webkit-autofill:focus
            -webkit-box-shadow:0 0 0 100px #eee inset
            -webkit-text-fill-color: #000000
          a
            display: inline-block
            width: 200px
            text-align center
            color: #333333
            font-size: 28px
            line-height: 60px
            border: 1px solid #7f7f7f
            border-radius 5px
            position: absolute
            right: 0
            top: 10px
        .login_hint
          padding: 15px 0
          display: flex
          justify-content space-between
          font-size 28px
        .login_message
          .get_verification
            width: 80px
            position: absolute
            top: 50%
            right: 0
            transform translateY(-50%)
        .login_verification
          .switch_button
            width: 100px
            position: absolute
            top: 50%
            right: 0
            transform translateY(-50%)
            height: 40px
            margin-right 20px
            border-radius 20px
            text-align center
            background-color: lightgray
            .switch_circle
              width: 40px
              height: 40px
              border-radius 50%
              background-color: #fff
              position: absolute
              transform translateX(0)
              transition transform .3s
              &.right
                transform translateX(60px)
            .switch_text
              display: block
              font-size 30px
              width: 100%
              height: 100%
              line-height: 40px
              text-align center
              color: #000
