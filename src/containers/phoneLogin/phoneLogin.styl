.phoneLogin
  height: 1334px
  background-color: #fff
  .loginWrap
    height: auto
    visibility hidden
    padding 0 .4rem
    .logo
      text-align center
      margin-top .74667rem
      margin-bottom: 0
      img
        width: 2.56rem
        height .85333rem
    .userBox
      height: auto
      margin-top 80px
      .login_message, .login_verification
        position: relative
        margin-bottom 20px
        border-bottom 1px solid lightgray
        border-radius 2px
        display: block
        width: 100%
        height: 80px
        line-height: 80px
        overflow: hidden
        font-size 28px
        color #fff
        vertical-align middle
        text-align left
        margin-top 20px
        input
          width: 100%
          height: 45px
          line-height: 45px
          font-size 28px
          margin: 12px 0
          //background-color #F5F5F9
          -webkit-tap-highlight-color: transparent
          letter-spacing: normal
          outline none
        &:-webkit-autofill
          -webkit-box-shadow:0 0 0 100px #eee inset
          -webkit-text-fill-color: #000000;
        &:-webkit-autofill:focus
          -webkit-box-shadow:0 0 0 100px #eee inset
          -webkit-text-fill-color: #000000
        a
          display: inline-block
          width: 200px
          text-align center
          color: #333333
          font-size: 28px
          line-height: 60px
          border: 1px solid #7f7f7f
          border-radius 5px
          position: absolute
          right: 0
          top: 10px
      .login_hint
        padding: 15px 0
        display: flex
        justify-content space-between
        font-size 28px
  .loginWrap-1
    height: auto
    visibility visible
  .loginWrap, .loginWrap userBox
    width: 100%
  .phone-login
    margin-bottom 30px
  .register
    color: #333
    font-size .37333rem
    text-align center
    width: 100%
    span
      display: block
      line-height: 100px
